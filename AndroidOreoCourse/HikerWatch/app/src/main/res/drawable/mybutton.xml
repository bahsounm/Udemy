<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed: looks pushed in -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="18dp"/>
            <solid android:color="#2B2B2B"/>
            <stroke android:width="1dp" android:color="#1F1F1F"/>
        </shape>
    </item>

    <!-- Normal: lighter top highlight + darker bottom -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="18dp"/>
            <stroke android:width="1dp" android:color="#1F1F1F"/>
            <gradient
                android:angle="270"
                android:startColor="#4A4A4A"
                android:centerColor="#3A3A3A"
                android:endColor="#2A2A2A"/>
        </shape>
    </item>

</selector>